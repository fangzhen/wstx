<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:jaxws="http://cxf.apache.org/jaxws" xmlns:cxf="http://cxf.apache.org/core"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:wsa="http://cxf.apache.org/ws/addressing"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd
http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

	<jaxws:client id="hello" serviceClass="info.fzhen.wstx.HelloService"
		address="http://localhost:28081/helloworld/services/hello"></jaxws:client>

	<jaxws:client id="activationService"
		serviceClass="org.oasis_open.docs.ws_tx.wscoor._2006._06.ActivationPortType"
		address="http://localhost:28080/wstx-coor/services/activation"></jaxws:client>
	<jaxws:client id="registrationService"
		serviceClass="org.oasis_open.docs.ws_tx.wscoor._2006._06.RegistrationPortType"
		address="http://localhost:28080/wstx-coor/services/activation"></jaxws:client>
	<cxf:bus>
		<cxf:features>
			<wsa:addressing />
		</cxf:features>
	</cxf:bus>

</beans>